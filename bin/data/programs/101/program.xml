<base robot_number="101">
	<block name="if path in front is blocked" color="0x65c270">
		<bracket>1</bracket>
		<file>pathBlocked.blk</file>
		<action>if:!$front(4)</action>
		<blocksIn>
			<block name="go backward %d inches" color="0xde8c3a">
				<dropdown>
					<ddlow>0</ddlow>
					<ddhigh>12</ddhigh>
					<ddsteps>7</ddsteps>
					<selected>6</selected>
				</dropdown>
				<file>backward.blk</file>
				<action>move:-$dd[0].num()*$ppi</action>
			</block>
			<block name="go backward %d inches" color="0xde8c3a">
				<dropdown>
					<ddlow>0</ddlow>
					<ddhigh>12</ddhigh>
					<ddsteps>7</ddsteps>
					<selected>8</selected>
				</dropdown>
				<file>backward.blk</file>
				<action>move:-$dd[0].num()*$ppi</action>
			</block>
			<block name="go forward %d inches" color="0xde8c3a">
				<dropdown>
					<ddlow>0</ddlow>
					<ddhigh>12</ddhigh>
					<ddsteps>7</ddsteps>
					<selected>8</selected>
				</dropdown>
				<action>move:$dd[0].num()*$ppi</action>
				<file>forward.blk</file>
			</block>
			<block name="go forward %d inches" color="0xde8c3a">
				<dropdown>
					<ddlow>0</ddlow>
					<ddhigh>12</ddhigh>
					<ddsteps>7</ddsteps>
					<selected>4</selected>
				</dropdown>
				<action>move:$dd[0].num()*$ppi</action>
				<file>forward.blk</file>
			</block>
		</blocksIn>
	</block>
</base>